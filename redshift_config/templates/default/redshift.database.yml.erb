# This file is generated by the redshift_config cookbook. Update it by setting the
# stack's custom JSON and executing the redshift_config::configure recipe.

<%= @environment %>:
  adapter: <%= @env[:adapter].to_s.inspect %>
  database: <%= @env[:database].to_s.inspect %>
  encoding: <%= (@env[:encoding] || 'utf8').to_s.inspect %>
  host: <%= (@env[:host] || 'localhost').to_s.inspect %>
  schema_search_path: <%= (@env[:schema_search_path] || 'public').to_s.inspect %>
  username: <%= @env[:username].to_s.inspect %>
  password: <%= @env[:password].to_s.inspect %>
  reconnect: <%= @env[:reconnect] ? 'true' : 'false' %>
<% if @env[:pool] -%>
  pool: <%= @env[:pool].to_i.inspect %>
<% end -%>
<% if @env[:port] -%>
  port: <%= @env[:port].to_i.inspect %>
<% end -%>

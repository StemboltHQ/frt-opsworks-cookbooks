[general]
# Path to the AWSLogs agent's state file. Agent uses this file to maintain
# client side state across its executions.
state_file = /var/awslogs/state/agent-state

<% stack_name = node[:opsworks][:stack][:name].gsub(' ','_') %>
<% hostname = node[:opsworks][:instance][:hostname] %>

[opsworks]
datetime_format = [%Y-%m-%d %H:%M:%S]
log_group_name = <%= stack_name %>-opsworks
file = /var/log/aws/opsworks/opsworks-agent.log
log_stream_name = <%= hostname %>

<% node[:deploy].each do |application, deploy| %>

[<%= application %>-rails]
datetime_format = %Y-%m-%d %H:%M:%S
log_group_name = <%= stack_name %>-<%= application %>-rails
file = <%= deploy[:deploy_to] %>/shared/log/<%= deploy[:rails_env] %>.log
log_stream_name = <%= hostname %>

[<%= application %>-delayed_job]
datetime_format = %Y-%m-%dT%H:%M:%S
log_group_name = <%= stack_name %>-<%= application %>-delayed_job
file = <%= deploy[:deploy_to] %>/shared/log/delayed_job.log
log_stream_name = <%= hostname %>

[<%= application %>-cron]
log_group_name = <%= stack_name %>-<%= application %>-cron
file = <%= deploy[:deploy_to] %>/shared/log/cron_log.log
log_stream_name = <%= hostname %>

[<%= application %>-braintree]
log_group_name = <%= stack_name %>-<%= application %>-braintree
file = <%= deploy[:deploy_to] %>/shared/log/braintree.log
log_stream_name = <%= hostname %>

[<%= application %>-netsuite]
log_group_name = <%= stack_name %>-<%= application %>-netsuite
file = <%= deploy[:deploy_to] %>/shared/log/netsuite.log
log_stream_name = <%= hostname %>

[<%= application %>-newrelic]
log_group_name = <%= stack_name %>-<%= application %>-newrelic
file = <%= deploy[:deploy_to] %>/shared/log/newrelic_agent.log
log_stream_name = <%= hostname %>

[<%= application %>-unicorn_stderr]
log_group_name = <%= stack_name %>-<%= application %>-unicorn_stderr
file = <%= deploy[:deploy_to] %>/shared/log/unicorn.stderr.log
log_stream_name = <%= hostname %>

[<%= application %>-unicorn_stdout]
log_group_name = <%= stack_name %>-<%= application %>-unicorn_stdout
file = <%= deploy[:deploy_to] %>/shared/log/unicorn.stderr.log
log_stream_name = <%= hostname %>



<% end %>

